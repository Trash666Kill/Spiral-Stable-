[Network]
- Dynamic
{
# Virtual network interface
allow-hotplug enp1s0
iface enp1s0 inet dhcp

# Primary local interface
allow-hotplug enp0s18
iface enp0s18 inet dhcp
}

- Static
{
auto enp1s0
  iface enp1s0 inet static
      address 192.0.2.7/24
      gateway 192.0.2.254
}

{
- Bridge
auto venp3s0f0
  iface venp3s1 inet static
      bridge_ports enp3s0
      address 192.168.4.10/24
      gateway 192.168.4.4

auto venp4s5
  iface venp4s5 inet dhcp
      bridge_ports enp4s5
      bridge_stp on
      bridge_fd 0.0
}
